{% extends "master.tmpl" %}

{% block css %}

    {% if  image %}
        <style>@media screen and (min-width: 640px) {.hero {background: url('/files/{{image|escape}}') no-repeat center center; background-size: cover;}}</style>
    {% else %}
        <style>@media screen and (min-width: 640px) {.hero {background: url('/files/default_picture_full.jpg') no-repeat center center; background-size: cover;}}</style>
    {% endif %}

{% endblock %}

{% block header %}
    {% include "_hero.tmpl" %}
{% endblock %}

{% block article %}
    <article class="post-{{ post.meta('type') }} h-entry hentry postpage" itemscope="itemscope" itemtype="http://schema.org/Article">
        <div class="article-content row">{{contents}}</div>
        <p>{{topics|escape}}</p>
    </article>
{% endblock %}

{% block editLinks %}
    {% include "_editLinks.jade" %}
{% endblock %}

{% block nav %}
    {% include "_prevnext.jade" %}
{% endblock %}
