<!doctype html>
<html class="no-js" lang="{{ lang }}">

    {% block head %}
        <head>
            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <title>{{title|escape}}</title>
            <link href="/bits/fumseck.css" rel="stylesheet">
            <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" rel="stylesheet">

            {% block css %}
            {% endblock %}

        </head>
    {% endblock %}


    <body>
        {% block header %}
            {% include "_topbar.tmpl" %}
            <h1>{{title|escape}}</h1>
        {% endblock %}

        {% block toc %}
            {% include "_toc.tmpl" %}
        {% endblock %}

        {% block article %}
            <article>
                <div class="article-content row">
                    {{contents}
                </div>
            </article>{% endblock %}

            {% block editLinks %}
            {% endblock %}

            {% block nav %}
            {% endblock %}

            {% block footer %}
                {% include "_footer.tmpl" %}
            {% endblock %}
    </body>
</html>
