{#  -*- coding: utf-8 -*- #}
{% block content %}

    <div id="{{ post_list_id }}" class="project-list grid-x grid-padding-x small-up-1 medium-up-2 large-up-3">
        {% if posts %}
            {% for post in posts %}

            <article class="snippet cell">
                <a href="{{ post.permalink(lang) }}">

                    <div class="snippet-image">
                        {% if post.meta('image') %}
                            <img src="{{ post.meta('image') }}"/>
                        {% endif %}
                    </div>

                    <div class="snippet-text">
                        <h3>
                            {{ post.title(lang)|e }}
                            {% if post.meta('subtitle') %}
                                <small>â€“ {{ post.meta('subtitle'|e) }}</small>
                            {% endif %}
                        </h3>

                        <p class="snippet-date"><time class="published dt-published" datetime="{{ post.formatted_date('webiso') }}" itemprop="datePublished" title="{{ post.formatted_date(date_format)|e }}">{{ post.formatted_date( messages('date_format_long'))|e }}</time></p>
                    </div>
                </a>
            </article>
            {% endfor %}
        {% endif %}
    </div>

{% endblock %}
