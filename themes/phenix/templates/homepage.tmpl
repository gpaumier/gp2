{#  -*- coding: utf-8 -*- #}
{% import 'post_helper.tmpl' as helper with context %}
{% import 'post_header.tmpl' as pheader with context %}
{% extends 'page.tmpl' %}

{% block header %}
{% endblock %}

{% block content %}
<article class="page h-entry hentry postpage" itemscope="itemscope" itemtype="http://schema.org/WebPage">

  <div>
    <div>{% include "_header.tmpl" %}</div>
    <div>{{ post.text() | get_lead_text }}</div>
  </div>

  <div id="main-content-section">

    {% if post.meta('image') %}
        <img src="{{ post.meta('image') }}" class="post-image"/>
    {% endif %}

    <header>
        <h1 class="p-name entry-title" itemprop="headline name">{{ post.title()|e }}</h1>
    </header>

    <div class="e-content entry-content" itemprop="articleBody text">
    {{ post.text() }}
    </div>
  </div>

  </div>



</article>
{% endblock %}
