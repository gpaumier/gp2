{#  -*- coding: utf-8 -*- #}
{% import 'base_helper.tmpl' as base with context %}
<!DOCTYPE html>
<html class="no-js" lang="{{ lang }}">
    {{ set_locale(lang) }}
    {% block head %}
        <head>
            {% include "_head.j2" %}
        </head>
    {% endblock %}


    <body>
        <div id="skip-to-content"><a href="#content">{{ messages("Skip to main content") }}</a></div>

        {% block header %}
        {% endblock %}

        {% block toc %}
        {% endblock %}

        <main id="content">
            {% block content %}
                <article>
                    <div class="article-content row">
                        {{ post.text() }}
                    </div>
                </article>
            {% endblock %}
        </main>

        {% block edit_link %}
            {% include "_edit_link.j2" %}
        {% endblock %}

        {% block nav %}
        {% endblock %}

        {% block footer %}
            {% include "_footer.j2" %}
        {% endblock %}

    </body>
</html>
