{% extends 'base.j2' %}

{% block header %}
    {% include "_header.j2" %}
{% endblock %}

{% block content %}
<article class="post-default-project post-{{ post.meta('slug') }} h-entry hentry postpage {% if post.meta('class') %}{{ post.meta('class') }}{% endif %}" itemscope="itemscope" itemtype="http://schema.org/Article">

    {% if post.meta('image') %}
        <img src="{{ post.meta('image') }}" class="post-image"/>
    {% endif %}

    <header>
        <h1 class="p-name entry-title" itemprop="headline name">{{ post.title()|e }}</h1>

        {% if post.meta('subtitle') %}
            <h1 class="subheader post-subtitle">{{ post.meta('subtitle') }}</h1>
        {% endif %}

        <p class="dateline"><time class="published dt-published" datetime="{{ post.formatted_date('webiso') }}" itemprop="datePublished" title="{{ post.formatted_date(date_format)|e }}">{{ post.formatted_date( messages('date_format_long'))|e }}</time></p>

        {% if post.meta('end') %}
            <p>{{ post.meta('end') }}</p>
        {% endif %}

    </header>

    <div class="e-content entry-content" itemprop="articleBody text">
    {{ post.text() }}
    </div>

</article>
{% endblock %}
