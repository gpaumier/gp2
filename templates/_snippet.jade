article.snippet
    
    div.snippet-content
            
        if item.image
            img(src="#{item.image}", alt="")
        
        div.snippet-text
            h3
                a(href='/'+item.path)!= item.title
            p= item.excerpt.slice(3, -4)
            p.snippet-date= moment(item.date).locale(locale).format('LL')
